{
    "name": "delfimov/session",
    "license": "MIT",
    "type": "library",
    "description": "Easy to use library for managing PHP built-in sessions",
    "keywords": ["sessions", "php", "pdo", "mysql", "psr-11"],

    "homepage": "https://github.com/delfimov/Session/",

    "authors": [
        {
            "name": "Dmitry Elfimov",
            "email": "elfimov@gmail.com"
        }
    ],

    "contributors": [
    ],

    "autoload": {
        "psr-4": {
            "DElfimov\\Session\\": "./src"
        }
    },

    "prefer-stable" : true,

    "require": {
        "php": ">=7.1"
    },

    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpunit/phpunit": "7.*",
        "scrutinizer/ocular": "~1.3",
        "satooshi/php-coveralls": "^1.0",
        "phpdocumentor/phpdocumentor": "2.*",
        "psr/log": "1.0.*",
        "phpunit/dbunit": "^4.0"
    },
    "suggest": {
        "monolog/monolog": "@stable"
    },

    "scripts" : {
        "phpcs": "php ./vendor/bin/phpcs",
        "test": [
            "php ./vendor/bin/phpunit --stderr"
        ]
    }
}
